<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="?colorPrimaryDark">

    <ImageView
        android:id="@+id/imgvDrawerHeaderImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/baseline_logo_dev_120_white"
        android:contentDescription="@string/imgv_drawer_header"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/txtDrawerHeaderUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgvDrawerHeaderImage"
        android:layout_marginTop="16dp"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textColor="@color/white"/>
</RelativeLayout>